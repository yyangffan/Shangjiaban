<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_xq_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/xm2"
        android:gravity="center"
        android:paddingTop="@dimen/padding_big"
        android:text="Name"
        android:textColor="@color/app_bg"/>

    <TextView
        android:id="@+id/dialog_xq_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_big"
        android:background="@drawable/edt_juxing_bg"
        android:ellipsize="end"
        android:padding="@dimen/padding_big"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dialog_xq_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:gravity="center"
        android:padding="@dimen/padding_big"
        android:text="知道了"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_big_size"/>


</LinearLayout>