<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.superc.shangjiaban.ui.activity.AddAplyActivity">


    <TextView
        android:id="@+id/textView97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="*"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/textView99"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView99"/>

    <TextView
        android:id="@+id/textView99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="申请提现金额"
        app:layout_constraintBaseline_toBaselineOf="@+id/money"
        app:layout_constraintLeft_toRightOf="@+id/textView97"/>

    <EditText
        android:id="@+id/money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:inputType="number"
        android:layout_marginTop="8dp"
        android:background="@drawable/edt_juxing_bg"
        android:padding="@dimen/padding_big"
        android:textSize="@dimen/txt_noramal_size"
        app:layout_constraintLeft_toRightOf="@+id/textView99"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/txt_small_size"
        android:text="您的账户余额为"
        app:layout_constraintLeft_toLeftOf="@+id/money"
        app:layout_constraintTop_toBottomOf="@+id/money"/>

    <TextView
        android:id="@+id/textView107"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView105"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认提交"
        android:padding="@dimen/padding_big"
        android:background="@drawable/tv_login_blue"
        android:textColor="@color/white"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView105"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView107"/>

    <TextView
        android:id="@+id/xianshi_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10元"
        android:textSize="@dimen/txt_small_size"
        app:layout_constraintLeft_toRightOf="@+id/textView105"
        android:layout_marginLeft="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView105"/>


</android.support.constraint.ConstraintLayout>