<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.superc.shangjiaban.ui.LoginActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/gray_ba"/>
    </LinearLayout>

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/app_bg"
        android:gravity="center"
        android:padding="@dimen/padding_big"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_big_size"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/edit_pass"
        app:layout_constraintRight_toRightOf="@+id/edit_pass"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass"/>


    <EditText
        android:id="@+id/edit_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:background="@color/gray_ee"
        android:ems="10"
        android:hint="账号"
        android:inputType="textPersonName"
        android:padding="@dimen/padding_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll"/>

    <EditText
        android:id="@+id/edit_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="7dp"
        android:background="@color/gray_ee"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword"
        android:padding="@dimen/padding_big"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="@+id/edit_account"
        app:layout_constraintRight_toRightOf="@+id/edit_account"
        app:layout_constraintTop_toBottomOf="@+id/edit_account"/>

    <TextView
        android:id="@+id/logint_forgetPas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="忘记密码"
        android:textColor="@color/app_bg"
        android:textSize="@dimen/txt_noramal_size"
        app:layout_constraintRight_toRightOf="@+id/login_tv"
        app:layout_constraintTop_toBottomOf="@+id/login_tv"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="— 请先登录 —"
        android:textSize="@dimen/txt_noramal_size"
        android:textColor="@color/gray_cd"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_account"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/edit_account"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/edit_account"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/guanjia"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/ll"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.503"/>

    <TextView
        android:id="@+id/textView108"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="百姓管家"
        android:textSize="46sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/app_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView114"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.545"/>

    <TextView
        android:id="@+id/textView114"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/app_bg"
        android:textSize="@dimen/txt_noramal_size"
        android:text="管家管理系统"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>