        app:layout_constraintTop_toBottomOf="@+id/textView50"/>

    <TextView
        android:id="@+id/shop_all_lx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView52"
        app:layout_constraintLeft_toRightOf="@+id/textView52"/>

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="@dimen/margin_small"
        android:text="手机:"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/textView52"
        app:layout_constraintTop_toBottomOf="@+id/textView52"/>

    <TextView
        android:id="@+id/shop_all_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView54"
        app:layout_constraintLeft_toRightOf="@+id/textView54"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray_ee"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView45"/>

    <TextView
        android:id="@+id/shop_all_chakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:autoLink="all"
        android:text="@string/tv_chakan"
        android:textColor="@color/app_bg"
        app:layout_constraintBottom_toBottomOf="@+id/textView54"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview100"/>
