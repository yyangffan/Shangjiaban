        android:layout_marginTop="4dp"
        android:text="2017-8-9 12:12"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/shop_all_danhao"
        app:layout_constraintTop_toBottomOf="@+id/shop_all_danhao"/>

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/tv_god"
        android:gravity="center"
        android:minWidth="90dp"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_big"
        android:paddingRight="@dimen/padding_big"
        android:paddingTop="@dimen/padding_normal"
        android:text="已确认"
        android:textColor="@color/god_yellow"
        app:layout_constraintLeft_toLeftOf="@+id/shop_all_time"
        app:layout_constraintTop_toBottomOf="@+id/shop_all_time"/>

    <TextView
        android:id="@+id/textview100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
