        android:textColor="@color/app_bg"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview100"
        app:layout_constraintLeft_toRightOf="@+id/textview100"/>

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
