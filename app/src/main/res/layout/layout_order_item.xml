<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textView71"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/gray_ee"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_item_num"/>


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@+id/order_item_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_item_name"/>

    <TextView
        android:id="@+id/order_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal"
        android:text="女女女女女女女女女女"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/order_item_money"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/order_item_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:padding="@dimen/padding_normal"
        android:text="红色"
        app:layout_constraintLeft_toLeftOf="@+id/order_item_name"
        app:layout_constraintTop_toBottomOf="@+id/order_item_name"/>

    <TextView
        android:id="@+id/order_item_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingTop="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_normal"
        android:text="¥199"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/order_item_name"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/order_item_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="right"
        android:lines="1"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_normal"
        android:text="X2"
        app:layout_constraintLeft_toLeftOf="@+id/order_item_name"
        app:layout_constraintTop_toBottomOf="@+id/order_item_style"/>

</android.support.constraint.ConstraintLayout>