<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_ee"
    tools:context="com.superc.shangjiaban.ui.activity.OrderSearchActivity">

    <TextView
        android:id="@+id/order_search_lx"
        android:layout_width="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_white"
        android:hint="订单类型"
        android:textColor="@color/black"
        android:padding="@dimen/padding_big"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/order_search_sttime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_white"
        android:hint="下单开始时间"
        android:padding="@dimen/padding_big"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/order_search_lx"
        app:layout_constraintRight_toRightOf="@+id/order_search_lx"
        app:layout_constraintTop_toBottomOf="@+id/order_search_lx"/>

    <TextView
        android:id="@+id/order_search_endtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_white"
        android:hint="下单结束时间"
        android:padding="@dimen/padding_big"
        app:layout_constraintLeft_toLeftOf="@+id/order_search_sttime"
        app:layout_constraintRight_toRightOf="@+id/order_search_sttime"
        app:layout_constraintTop_toBottomOf="@+id/order_search_sttime"/>

    <TextView
        android:id="@+id/order_search_zfzt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_white"
        android:hint="支付状态"
        android:textColor="@color/black"
        android:padding="@dimen/padding_big"
        app:layout_constraintLeft_toLeftOf="@+id/order_search_endtime"
        app:layout_constraintRight_toRightOf="@+id/order_search_endtime"
        app:layout_constraintTop_toBottomOf="@+id/order_search_endtime"/>

    <TextView
        android:id="@+id/order_search_fhzt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_white"
        android:hint="发货状态"
        android:textColor="@color/black"
        android:padding="@dimen/padding_big"
        app:layout_constraintLeft_toLeftOf="@+id/order_search_zfzt"
        app:layout_constraintRight_toRightOf="@+id/order_search_zfzt"
        app:layout_constraintTop_toBottomOf="@+id/order_search_zfzt"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/order_search_ddzt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_white"
        android:hint="订单状态"
        android:textColor="@color/black"
        android:padding="@dimen/padding_big"
        app:layout_constraintLeft_toLeftOf="@+id/order_search_fhzt"
        app:layout_constraintRight_toRightOf="@+id/order_search_fhzt"
        app:layout_constraintTop_toBottomOf="@+id/order_search_fhzt"/>

    <EditText
        android:id="@+id/order_search_bianhao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_white"
        android:hint="请输入订单编号"
        android:padding="@dimen/padding_big"
        android:textSize="@dimen/txt_noramal_size"
        app:layout_constraintLeft_toLeftOf="@+id/order_search_ddzt"
        app:layout_constraintRight_toRightOf="@+id/order_search_ddzt"
        app:layout_constraintTop_toBottomOf="@+id/order_search_ddzt"/>

    <TextView
        android:id="@+id/order_search_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/circle_appbg"
        android:gravity="center"
        android:padding="@dimen/padding_big"
        android:text="搜索"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/order_search_lx"
        app:layout_constraintTop_toTopOf="@+id/order_search_lx"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/order_search_lx"
        android:layout_marginBottom="0dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/order_search_sttime"
        app:layout_constraintBottom_toBottomOf="@+id/order_search_sttime"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/order_search_sttime"
        android:layout_marginTop="0dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/order_search_endtime"
        app:layout_constraintTop_toTopOf="@+id/order_search_endtime"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/order_search_endtime"
        android:layout_marginBottom="0dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        app:layout_constraintTop_toTopOf="@+id/order_search_zfzt"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/order_search_zfzt"
        app:layout_constraintBottom_toBottomOf="@+id/order_search_zfzt"
        android:layout_marginBottom="0dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/order_search_fhzt"
        app:layout_constraintTop_toTopOf="@+id/order_search_fhzt"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/order_search_fhzt"
        android:layout_marginBottom="0dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/order_search_ddzt"
        app:layout_constraintTop_toTopOf="@+id/order_search_ddzt"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/order_search_ddzt"
        android:layout_marginBottom="0dp"/>

</android.support.constraint.ConstraintLayout>